<!DOCTYPE html>
<html>
<%- include partial/header %>
<body>
  <%- include partial/menu %>
  <div class="container">
   <div id="report">
          <div id="reportwrapper" class="reportwrapper">
            <div id="reportcontainer" class="reportcontainer">
             <div class="content_wrapper">
               <table class="lap" style="border:0; cellpadding:0; cellspacing:0;">
                 <tr><td colspan="4"><h2>Laporan Transaksi Berdasar Customer</h2></td></tr>
                 <tr><td colspan="4"><hr></hr></td></tr>
                 <tr><td colspan="4">POS Online</td></tr>
                 <tr><td colspan="4"><%= new Date(); %> </td></tr>
              </table>
              <p>&nbsp;</p>
              <p>&nbsp;</p>
              <table style="width:100%; border:2px; cellpadding:1px; cellspacing:1px;">
                 <tr>
                      <th>No</th>
                      <th>Nama Customer</th>
                      <th>Detil Transaksi</th>
                      <th></th>
                      <!-- <td>Total Harga</td> -->
                 </tr>

                   <% let i=1; reportCus.forEach(cust=>{ %>
                   <tr>
                         <td><%=i++%></td>
                         <td><%=cust.user_name%></td>
                         <td colspan="2">

                         <% cust.Transakses.forEach(trans=>{ %>
                          <table class="table" cellpading="0" cellspacing="0">
                            <tr>
                              <th>Nama Brg</th><th>Harga</th><th>Jml Beli</th><th>Sub Total</th>
                            </tr>
                             <tr><td colspan="4"><%=trans.trans_tgl%> No Transaksi [<%=trans.id%>]</td></tr>

                           <% trans.Barangs.forEach(brg=>{ %>
                             <tr>
                              <td><%=brg.nama_barang%> </td>
                              <td><%=brg.Detils.harga%> </td>
                              <td align="right"><%=brg.Detils.jml_beli%></td>
                              <td align="right"><%=brg.Detils.sub_total%></td>
                            </tr>
                           <% }) %>
                            </table>
                          <% }) %>
                          </td>
                       <% }) %>
                  </tr>
             </table>
             <center><div id="typeReport"><br><br><br></div></center>
             <p>&nbsp;</p>
             <table class="lap" style="width:30%; border:0; align:left;">
               <tr><td>JML</td><td>:</td><td id="bill"></td></tr>
             </table>

           <div id="signature">

           </div>

           <div class="spacer"></div>
         </div>
       </div>
     </div>
  </div>

  </div>
  </body>
  </html>
